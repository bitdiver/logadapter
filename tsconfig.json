{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src/**/*.json", "src/**/*.ts", "tests/**/*.ts", "src/**/*.js", "tests/**/*.js"],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
